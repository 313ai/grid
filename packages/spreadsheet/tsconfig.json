{
  "include": ["src/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "declaration": true,
    "module": "esnext",
    "noImplicitAny": true,
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "react",
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "sourceMap": true
  }
}